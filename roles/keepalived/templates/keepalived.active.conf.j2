# /etc/keepalived/keepalived.conf

vrrp_script chk_haproxy {
    script "/usr/sbin/pidof haproxy" # check the haproxy process
    interval 1 # every 1 second
    weight 2 # add 2 points if OK
}

vrrp_instance VI_1 {
    state MASTER
    interface eth1
    virtual_router_id 51
    priority 101
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ vrrp_heartbeat_auth_password }}
    }
    unicast_src_ip {{ hostvars[ active_server ][ "ansible_host" ] }}
    unicast_peer {
        {{ hostvars[ standby_server ][ "ansible_host" ] }}
    }
    virtual_ipaddress {
        {{ virtual_ip_address }}
    }
    track_script {
        chk_haproxy
    }
}
